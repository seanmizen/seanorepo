FROM node:23-slim AS dev
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1
# Note: source will be mounted via docker-compose volume
CMD ["yarn", "rsbuild", "dev", "--port", "4040"]

FROM node:23-slim AS prod-build
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1

# Copy workspace root files
COPY package.json yarn.lock .yarnrc.yml ./

# Copy parent workspace package.json (planning-poker defines nested workspaces)
COPY apps/planning-poker/package.json ./apps/planning-poker/

# Copy app package.json into workspace structure
COPY apps/planning-poker/frontend/package.json ./apps/planning-poker/frontend/

# Install workspace with lockfile (including devDependencies for build)
RUN yarn workspaces focus planning-poker-fe

# Copy app source and shared files
COPY apps/planning-poker/frontend/src ./apps/planning-poker/frontend/src
COPY apps/planning-poker/frontend/public ./apps/planning-poker/frontend/public
COPY apps/planning-poker/frontend/rsbuild.config.ts ./apps/planning-poker/frontend/
COPY apps/planning-poker/tsconfig.json ./apps/planning-poker/
COPY apps/planning-poker/configs.ts ./apps/planning-poker/

# Build using workspace command from root
ENV NODE_ENV=production
RUN yarn workspace planning-poker-fe build

FROM node:23-slim AS prod
WORKDIR /app
COPY --from=prod-build /app/apps/planning-poker/frontend/dist .
RUN corepack enable && corepack prepare yarn@4.8.1 && yarn global add serve
EXPOSE 4040
CMD ["serve", "-s", ".", "-l", "4040"]
