FROM node:23-slim AS dev
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1
# Note: source will be mounted via docker-compose volume
CMD ["yarn", "rsbuild", "dev", "--port", "4000"]

FROM node:23-slim AS prod-build
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1

# Copy workspace root files
COPY package.json yarn.lock .yarnrc.yml ./

# Copy app package.json into workspace structure
COPY apps/seanmizen.com/package.json ./apps/seanmizen.com/

# Install workspace with lockfile (including devDependencies for build)
RUN yarn workspaces focus seanmizen.com

# Copy app source
COPY apps/seanmizen.com/src ./apps/seanmizen.com/src
COPY apps/seanmizen.com/public ./apps/seanmizen.com/public
COPY apps/seanmizen.com/rsbuild.config.js ./apps/seanmizen.com/
COPY apps/seanmizen.com/tsconfig.json ./apps/seanmizen.com/

# Build using workspace command from root
ENV NODE_ENV=production
RUN yarn workspace seanmizen.com build

FROM node:23-slim AS prod
WORKDIR /app
COPY --from=prod-build /app/apps/seanmizen.com/dist .
RUN corepack enable && corepack prepare yarn@4.8.1 && yarn global add serve
EXPOSE 4000
CMD ["serve", "-s", ".", "-l", "4000"]
