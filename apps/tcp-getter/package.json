{
  "name": "tcp-getter",
  "packageManager": "yarn@4.8.1",
  "scripts": {
    "start": "bun --hot --no-clear-screen index.ts",
    "DISABLEDstart:docker": "docker compose --profile dev up --build",
    "DISABLEDprod:docker": "docker compose --profile prod up --build --detach",
    "down": "docker compose --profile dev --profile prod down",
    "build": "bun build index.ts --outdir dist --target bun",
    "prod": "NODE_ENV=production bun dist/index.js"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.1.0",
    "@types/nodemailer": "^7.0.2",
    "fastify": "^5.6.1",
    "nodemailer": "^7.0.6"
  }
}
