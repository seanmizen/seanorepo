# Base URL for CORS (your site URL)
SITE_BASE_URL=https://seanmizen.com

# Port to run the service on
PORT=4120

# Gmail credentials for sending emails
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# SSH username for connection details
SSH_USERNAME=srv

# Ngrok API URL (local ngrok instance)
NGROK_API_URL=http://127.0.0.1:4040/api/tunnels

# Email whitelist (comma-separated, required)
EMAIL_WHITELIST=your-email@example.com

# Set to true for testing without ngrok
MOCK_TCP_TUNNEL=false
