{
  "name": "carolinemizen.art",
  "version": "0.2.0",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "build": "tsc",
    "start": "concurrently --prefix \"{time} {name} â€ \" -k -t \"HH:mm\" -n \"FE,BE\" -c \"green.bold,red.bold\" \"yarn workspace frontend start\" \"yarn workspace server start\"",
    "start-frontend": "cd src/frontend && bun dev",
    "start-server": "cd src/server && bun dev",
    "start-old": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts*\"",
    "format-check": "prettier --check \"src/**/*.ts*\""
  },
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.7.2",
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "prettier": "^3.2.4"
  }
}
