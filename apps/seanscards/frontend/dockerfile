FROM node:23-slim AS dev
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1
# Note: source will be mounted via docker-compose volume
CMD ["yarn", "rsbuild", "dev", "--port", "4010"]

FROM node:23-slim AS prod-build
WORKDIR /app
RUN corepack enable && corepack prepare yarn@4.8.1

# Copy workspace root files
COPY package.json yarn.lock .yarnrc.yml ./

# Copy parent workspace package.json (seanscards defines nested workspaces)
COPY apps/seanscards/package.json ./apps/seanscards/

# Copy app package.json into workspace structure
COPY apps/seanscards/frontend/package.json ./apps/seanscards/frontend/

# Install workspace with lockfile (including devDependencies for build)
RUN yarn workspaces focus seanscards-fe

# Copy app source and shared files
COPY apps/seanscards/frontend/src ./apps/seanscards/frontend/src
COPY apps/seanscards/frontend/public ./apps/seanscards/frontend/public
COPY apps/seanscards/frontend/rsbuild.config.ts ./apps/seanscards/frontend/
COPY apps/seanscards/tsconfig.json ./apps/seanscards/
COPY apps/seanscards/configs.ts ./apps/seanscards/

# Build using workspace command from root
ENV NODE_ENV=production
RUN yarn workspace seanscards-fe build

FROM node:23-slim AS prod
WORKDIR /app
COPY --from=prod-build /app/apps/seanscards/frontend/dist .
RUN corepack enable && corepack prepare yarn@4.8.1 && yarn global add serve
EXPOSE 4010
CMD ["serve", "-s", ".", "-l", "4010"]
