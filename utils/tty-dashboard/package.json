{
	"name": "tty-dashboard",
	"version": "0.0.0",
	"license": "MIT",
	"bin": "dist/cli.js",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"deploy": "yarn build && bash ./deploy-service.sh",
		"undeploy": "bash ./undeploy-service.sh",
		"start": "bash ./dev-session.sh",
		"test": "prettier --check . && xo && ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@distube/ytdl-core": "^4.16.12",
		"@types/fluent-ffmpeg": "^2.1.28",
		"fluent-ffmpeg": "^2.1.3",
		"ink": "^4.4.1",
		"jimp": "^1.6.0",
		"meow": "^11.0.0",
		"puppeteer": "^24.32.1",
		"react": "^18.3.1"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^8.1.0",
		"@types/react": "^18.3.27",
		"@vdemedes/prettier-config": "^2.0.1",
		"ava": "^5.3.1",
		"chalk": "^5.6.2",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^4.6.2",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.8",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"xo": "^0.53.1"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off"
		}
	},
	"prettier": "@vdemedes/prettier-config",
	"packageManager": "yarn@4.10.3"
}
